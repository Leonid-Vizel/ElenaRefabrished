@using FRDZSchool.Utility;
@using FRDZSchool.Models.DatabaseModels;
@model IEnumerable<SchoolObject>
@{
    ViewData["Title"] = "Предметы";
}

<div class="container pt-4">
    <h1 class="text-primary text-center display-5 tracking-in-expand">Список предметов</h1>
    <div class="table-responsive pt-3">
        <div class="table-wrapper" style="width: 99%">
            <table id="schoolObjectTable" class="table text-nowrap table-hover mb-0 cell-centered">
                <thead class="noselect">
                    <tr class="table-dark cell-centered">
                        <th scope="col">@Html.DisplayNameForInnerType((SchoolObject g)=>g.Name)</th>
                        <th scope="col">
                            <a asp-controller="SchoolObject" asp-action="Add" class="btn btn-success w-100"><i class="bi bi-plus-square big-icon"></i> Добавить</a>
                        </th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="~/js/schoolobject.js" asp-append-version="true"></script>
}