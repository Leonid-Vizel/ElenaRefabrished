@using FRDZSchool.Models.ViewModels;
@using FRDZSchool.Models.ViewModels.CreateModels;
@model SchoolObjectCreateModel
@{
    ViewData["Title"] = "Добавление";
}
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

<div align="center">
    <div class="container p-4">
        <form method="post">
            <div class="row pb-3">
                <h1 class="text-primary text-center display-5 tracking-in-expand">Добавление предмета</h1>
            </div>
            <div class="col-lg-7 col-md-9 col-sm-11 col-12 element-animation">
                <div class="mb-3">
                    <div class="form-floating mb-3 g-3">
                        <input class="form-control" placeholder="Name" asp-for="Name">
                        <span class="text-danger " asp-validation-for="Name"></span>
                        <label for="floatingInput" asp-for="Name"></label>
                    </div>
                    <div class="row g-3">
                        <div class="col">
                            <a asp-controller="SchoolObject" asp-action="Index" class="btn btn-primary w-100">Вернуться к списку</a>
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-success w-100">Добавить</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
