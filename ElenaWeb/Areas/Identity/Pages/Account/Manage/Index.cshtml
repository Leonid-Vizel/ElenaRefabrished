@page
@model IndexModel
@{
    ViewData["Title"] = "Профиль";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h2 class="mb-3">@ViewData["Title"]</h2>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="">
    <form id="profile-form" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                @if (Model.Input.PhotoPath != null)
                {
                    <img src="~/images/teachers/@Model.Input.PhotoPath" loading="lazy" style="object-fit:cover" class="w-100 rounded-2 mb-3" />
                }
                else
                {
                    <img src="~/images/avatar.png" loading="lazy" style="object-fit:cover" class="w-100 rounded-2 mb-3" />
                }
                <div class="form-floating mb-3">
                    <input asp-for="Id" class="form-control" placeholder="text" disabled />
                    <label asp-for="Id" class="form-label">Идентификатор</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="text" disabled />
                    <label asp-for="Username" class="form-label">Почта</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="text" />
                    <label asp-for="Input.PhoneNumber" class="form-label">Номер телефона</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" placeholder="Photo" asp-for="Photo">
                    <label for="floatingInput" asp-for="Photo">Изменить фото</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Surname" class="form-control" placeholder="text" />
                    <label asp-for="Input.Surname" class="form-label">Фамилия</label>
                    <span asp-validation-for="Input.Surname" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Name" class="form-control" placeholder="text" />
                    <label asp-for="Input.Name" class="form-label">Имя</label>
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Patronymic" class="form-control" placeholder="text" />
                    <label asp-for="Input.Patronymic" class="form-label">Отчество</label>
                    <span asp-validation-for="Input.Patronymic" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input type="date" class="form-control" placeholder="Birthday" asp-for="Input.Birthday">
                    <span class="text-danger" asp-validation-for="Input.Birthday"></span>
                    <label for="floatingInput" asp-for="Input.Birthday"></label>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" placeholder="Post" asp-for="Input.Post">
                    <span class="text-danger" asp-validation-for="Input.Post"></span>
                    <label for="floatingInput" asp-for="Input.Post"></label>
                </div>
                <div class="form-floating mb-3">
                    <select class="form-select" style="padding: 0.75rem 4.5rem 0.75rem 1.5rem !important" id="Qualification" asp-for="Input.Qualification">
                        <option selected disabled>Квалификация</option>
                        <option disabled>━━━━━━━━━━━━━━━━━━</option>
                        <option value="Высшая категория">Высшая категория</option>
                        <option value="Первая категория">Первая категория</option>
                        <option value="Вторая категория">Вторая категория</option>
                    </select>
                </div>
                <div class="form-floating mb-3">
                    <input type="number" min="0" max="60" class="form-control" placeholder="Experience" asp-for="Input.Experience">
                    <span class="text-danger" asp-validation-for="Input.Experience"></span>
                    <label for="floatingInput" asp-for="Input.Experience"></label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Address" class="form-control" placeholder="text" />
                    <label asp-for="Input.Address" class="form-label">Адрес</label>
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
            </div>
        </div>
        <button id="update-profile-button" type="submit" class="w-100 btn mb-3 btn-primary">Изменить</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
