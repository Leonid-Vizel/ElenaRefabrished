                    }
                    else
                    {
                        <td>@weeks @WordHelp.Inflect(weeks,"недель","неделя","недели") и @days @WordHelp.Inflect(days,"дней","день","дня")</td>
                    }
                }
            </tr>
            <tr>
                <th class="table-primary">IV четверть</th>
                <td>@Model.Quarter4Start.ToString("dd.MM.yyyy")</td>
