@using FRDZSchool.Models.DatabaseModels;
@model Photo
@{
    ViewData["Title"] = "Добавление фото";
}

<hr />
<h1 class="text-center noselect tracking-in-expand">Добавление фото в галерею</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-6">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group pb-2">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 pb-2">
                <input asp-for="ImageFile" class="form-control" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-2 w-100"><i class="bi bi-plus-circle"></i> Добавить</button>
        </form>
    </div>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
    }