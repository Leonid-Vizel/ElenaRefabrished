@model int
@{
    ViewData["Title"] = "Подтверждение";
}

<div class="text-center mt-5 pb-5">
    <h2 class="noselect tracking-in-expand text-danger">Вы уверены, что хотите удалить результаты ЕГЭ @Model года?</h2>
    <form method="post">
        <div class="row mt-5">
            <div class="col">
                <a class="btn btn-primary mt-2 w-100" asp-controller="Exam" asp-action="Index"><i class="bi bi-arrow-return-left"></i> Отмена</a>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-danger mt-2 w-100"><i class="bi bi-trash"></i> Удалить</button>
            </div>
        </div>
    </form>
</div>